console.log("loaded user controller");
myapp.controller('BlogController', [ 'BlogService', '$http', '$scope',
		'$location', function(UserService, $http, $scope, $location) {
			var self = this;
			self.user = {};
			
			self.showBlog = function() {
				console.log('show blog called');
				console.log('self.user');
				console.log(self.user);
				UserService.validate(self.guest).then(function(response) {
					// console.log(response.data);
					self.user = response.data;
					$location.path('/login');
				}, function(error) {
					console.log(error);
				});
			}
			
		} ]);